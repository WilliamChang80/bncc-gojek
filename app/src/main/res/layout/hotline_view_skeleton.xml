<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:id="@+id/loading_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/round_loading"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/Linear_phone_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/loading_image"
        app:layout_constraintStart_toEndOf="@id/loading_image"
        app:layout_constraintTop_toTopOf="@id/Image_call">

        <ImageView
            android:id="@+id/loading_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/text_loading"
            android:layout_marginBottom="8dp"
            />

        <ImageView
            android:id="@+id/loading_desc"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:src="@drawable/text_loading"
            android:layout_marginTop="8dp"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/Image_call"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/round_loading"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/Linear_phone_nama"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>