<?xml version="1.0" encoding="utf-8"?>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardElevation="6dp"
        android:background="@color/White"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        app:cardCornerRadius="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:background="@color/White"
            android:layout_gravity="center"
            >

            <TextView
                android:id="@+id/Label_province_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_bold"
                android:padding="10dp"
                android:text="DKI JAKARTA"
                android:textColor="@color/Indigo2"
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />

            <TextView
                android:id="@+id/Label_confirmed"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/round_teal"
                android:fontFamily="@font/rubik_bold"
                android:gravity="center"
                android:text="16538"
                android:textSize="14dp"
                android:textColor="@color/White"
                android:layout_marginStart="40dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Label_province_name" />

            <TextView
                android:id="@+id/Label_recovered"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/round_green"
                android:fontFamily="@font/rubik_bold"
                android:gravity="center"
                android:text="9342"
                android:textSize="14dp"
                android:textColor="@color/White"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="@id/Label_province_name"
                app:layout_constraintStart_toStartOf="@id/Label_province_name"
                app:layout_constraintTop_toBottomOf="@id/Label_province_name" />

            <TextView
                android:id="@+id/Label_death"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/round_red"
                android:fontFamily="@font/rubik_bold"
                android:gravity="center"
                android:text="1401"
                android:textSize="14dp"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/White"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Label_province_name" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

